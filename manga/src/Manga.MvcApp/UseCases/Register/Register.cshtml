@model Manga.MvcApp.UseCases.Register.RegisterRequest

<h2>Register</h2>

<form asp-controller="Customers" asp-action="Register">
    <div class="form-group">
        <label asp-for="Personnummer" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Personnummer" class="form-control" />
            <span asp-validation-for="Personnummer" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="InitialAmount" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="InitialAmount" class="form-control" />
            <span asp-validation-for="InitialAmount" class="text-danger"></span>
        </div>
    </div>
    <button type="submit">Register</button>
</form>